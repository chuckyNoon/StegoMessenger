<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiplomClient" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
    </style>

    <style name="DefaultDialogFragmentTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="windowNoTitle">true</item>
        <!-- Required for resizing dialog on keyboard open -->
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="TextInputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="backgroundTint">@color/edit_text_line_color</item>
    </style>

    <style name="DefaultEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>m>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="backgroundTint">@color/edit_text_line_color</item>
    </style>

    <style name="TextInputEditTextStyle.Small" parent="TextInputEditTextStyle">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:typeface">@font/roboto_medium</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primaryColor</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:windowContentTransitions">true</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

