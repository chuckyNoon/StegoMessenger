<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:colorAccent">@color/black</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="backgroundTint">@color/edit_text_line_color</item>
    </style>

    <style name="DefaultEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>m>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="backgroundTint">@color/edit_text_line_color</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="Headline1">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Headline2">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Subtitle1">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Subtitle2">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Caption">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ToolbarGeneric" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:tint">@color/accent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/windowBackground</item>
        <item name="android:elevation">@dimen/toolbar_default_elevation</item>
        <item name="android:minHeight">@dimen/toolbar_default_height</item>
        <item name="contentInsetStart">@dimen/toolbar_default_content_inset_start</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/toolbar_title_text_color</item>
        <item name="android:layout_marginStart">@dimen/toolbar_title_margin_start</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/toolbar_small_title_text_size</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="ToolbarContainer" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:tint">@color/black</item>
        <item name="android:minHeight">@dimen/toolbar_default_height</item>
    </style>

    <style name="DefaultBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="DefaultBottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/DefaultBottomSheetStyle</item>
    </style>

    <style name="BottomSheetContainer" parent="list_item_size_style">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/bottom_sheet_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BottomSheetHeaderBlock">
        <item name="android:stateListAnimator">@animator/toolbar_elevation</item>
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="BottomSheetFooterBlock">
        <item name="android:stateListAnimator">@animator/toolbar_elevation</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="BottomSheetSwiper">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bottom_sheet_swiper_shape</item>
    </style>

    <style name="list_item_size_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>