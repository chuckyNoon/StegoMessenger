<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_margin="16dp"
    android:background="@color/transparent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Options"
            android:textSize="24sp" />

        <RadioButton
            android:id="@+id/no_stego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No stego" />


        <RadioButton
            android:id="@+id/stego_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stego 1" />


        <RadioButton
            android:id="@+id/stego_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stego 2" />


        <Button
            android:id="@+id/select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select image"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/select_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select container"
            android:textColor="@color/black" />

        <ProgressBar
            android:id="@+id/progress_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="2dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textColor="@color/black" />

    </LinearLayout>


</FrameLayout>

